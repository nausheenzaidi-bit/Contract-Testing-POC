  Mixed
}

type ComponentModule @key(fields: "hash") @cacheControl(maxAge: 300) {
  hash: String
  widgets: [UGCWidget] @requires(fields: "hash")
}

type StandaloneContentModule @key(fields: "type contentID") {
  type: ContentModuleType!
  contentID: String
  wrapperContentModuleId: ID @external
  socialWidgets: [SocialWidget] @requires(fields: "type wrapperContentModuleId contentID")
}

type ChatModule @key(fields: "chatroom") {
  chatroom: String
}

type ChannelComponent @key(fields: "uuid") @cacheControl(maxAge: 300) {
  uuid: String!
  semanticID: SemanticID @external
  semanticType: SemanticType @external
  tagUUID: String @external
  chat: ChatModule @requires(fields: "semanticID semanticType tagUUID")
  userContents(
    """Users LiveLike ProfileId"""
    profileID: String
    """Optional offset for pagination. Skips the first N items. Default: 0"""
    offset: Int
    """Optional limit for number of items to return. Default: 150, Max: 200"""
    limit: Int
  ): [StandaloneContentModule] @requires(fields: "semanticID semanticType")
}

type UGCPost @key(fields: "id") @cacheControl(maxAge: 60) {
  id: ID!
  uploadId: String
}

enum ImageTypes {
  jpg
  png
}

